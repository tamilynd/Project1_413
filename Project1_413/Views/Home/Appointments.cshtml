@{ }

@model IEnumerable<Project1_413.Models.Appointment>

@{ List<string> days = SignUpViewModel.GetDays();
                List<string> start = SignUpViewModel.GetStartTimes();
                List<string> finish = SignUpViewModel.GetFinishTimes(); }

<div>
    <h2>List of Appointments</h2>
    <div>
        <table>
            <thead>
                <tr>
                    <th>Appointment ID</th>
                    <th>Date</th>
                    <th>Start Time</th>
                    <th>End Time</th>
                    <th>Group Name</th>
                    <th>Group Size</th>
                    <th>Email Address</th>
                    <th>Phone Number</th>
                </tr>
            </thead>

            <tbody>

           
              @foreach (Project1_413.Models.Appointment x in Model)
            {
                <tr>


                    <td>@x.AppointmentID</td>
                    <td>@x.Date</td>
                    <td>@x.StartTime</td>
                    <td>@x.EndTime</td>
                    <td>@x.GroupName</td>
                    <td>@x.GroupSize</td>
                    <td>@x.EmailAddress</td>
                    <td>@x.PhoneNumber</td>
                </tr>
            }

            </tbody>
        </table>

    </div>
</div>
